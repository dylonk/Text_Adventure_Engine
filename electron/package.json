{
  "name": "magiquill_player",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "description": "Player for Magiquill.",
  "author": "Magiquill Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/dylonk/Text_Adventure_Engine.git"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "pinia": "^2.1.7",
    "toastify": "^2.0.1",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "electron": "^24.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^6.2.6",
    "vue": "^3.5.13"
  },
  "scripts": {
    "prebuild": "cpy ../frontend/src/components/editor/nodes/game_logic.js ./src/renderer/ --flat",
    "vite-build": "vite build",
    "build": "node build.js",
    "dev": "vite",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\""
  },
  "build": {
    "appId": "com.example.textadventure",
    "productName": "Text Adventure Electron",
    "files": [
      "dist/**/*",
      "src/**/*",
      "!src/renderer/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist_electron"
    },
    "dmg": {
      "background": "./assets/dmg-background.png",
      "icon": "./assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 450,
          "y": 220,
          "type": "file",
          "path": "dist_electron/Text Adventure Electron.app"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "./assets/icon.icns",
      "category": "public.app-category.games"
    },
    "win": {
      "target": "nsis",
      "icon": "./assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "./assets/icon.png"
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
